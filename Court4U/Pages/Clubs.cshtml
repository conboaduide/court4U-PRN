@page
@model Court4U.Pages.ClubsModel
@{
    Layout = "_UserLayout";
}

<div class="mt-20">
    <div class="p-5 px-20 bg-[#f0f0f0] space-x-5 text-center">
        <input type="text" class="bg-white text-black border border-gray-300 rounded-lg py-2 px-4 w-1/3" placeholder="Enter location" />
        <input type="date" class="bg-white text-black border border-gray-300 rounded-lg py-2 px-4 w-1/3" placeholder="Pick a date" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
        <button class="bg-green-500 text-white py-2 px-4 rounded-lg w-1/4">Search</button>
    </div>
    <div class="flex justify-end px-28">
        <div class="w-1/4 p-4 space-y-4">
            <div class="font-bold text-2xl">Advanced</div>
            <div class="space-y-2">
                <p class="font-semibold">Select Time</p>
                <input type="time" class="bg-white text-black border border-gray-300 rounded-lg py-2 px-4 w-full" placeholder="" />
            </div>
            <div class="space-y-2">
                <p class="font-semibold">Select Date</p>
                <input type="date" class="bg-white text-black border border-gray-300 rounded-lg py-2 px-4 w-full" placeholder="" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
            </div>
            <button class="bg-green-500 text-white py-2 px-4 rounded-lg w-full">Find</button>
        </div>
        <div class="w-3/4 flex flex-col p-4 space-y-4">
            @if (Model.Clubs != null)
            {
                @foreach (var club in Model.Clubs)
                {
                    <div class="flex bg-white shadow-lg rounded-lg overflow-hidden h-52">
                        <div class="w-1/4 relative">
                            <img src="@club.LogoUrl" alt="@club.Name" class="object-cover w-full h-full" />
                        </div>
                        <div class="w-3/4 p-4 flex flex-col justify-between">
                            <div>
                                <h2 class="text-xl font-bold">@club.Name</h2>
                                <p class="text-gray-600 mt-2">@club.Description</p>
                            </div>
                            <div class="flex justify-end">
                                <a href="/BookCourt/@club.Id" class="bg-green-500 text-white py-2 px-4 rounded-lg">Book</a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
