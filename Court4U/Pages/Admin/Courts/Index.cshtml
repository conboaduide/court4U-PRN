@page
@model IndexModel
@{
    ViewData["Title"] = "Courts";
    Layout = "_AdminLayout";
}
<div class="mb-3">
    <form class="form-inline" method="get" style="border: 2px solid #ced4da; padding: 15px; border-radius: 15px; box-shadow: 0 0 10px rgba(0,0,0,0.1);">
        <div class="form-group mb-2">
            <input type="text" class="form-control" name="searchString" placeholder="Search by number, status, name of club and city of province" style="border: 1px solid #ced4da; width: 400px; padding: 12px; border-radius: 15px;" />
            <button type="submit" class="btn btn-primary mb-2 ml-2 px-4 py-2" style="background-color: #28a745; border-color: #28a745; border-radius: 15px; box-shadow: 0 0 10px rgba(0,0,0,0.1);">Search</button>
        </div>
    </form>
</div>

<div class="d-flex justify-content-between align-items-center mb-5 mt-5">
    <a asp-page="Create" class="btn btn-success btn-lg rounded-pill px-4 py-2 ml-4" style="background-color: #28a745; border-color: #28a745; border-radius: 50px;">Create New</a>
</div>

<table class="table table-striped table-bordered mt-5">
    <thead class="thead-dark">
        <tr>
            <th style="width: 5%; border-right: 2px solid #343a40; border-bottom: 2px solid #343a40;" class="text-center">Number</th>
            <th style="width: 10%; border-right: 2px solid #343a40; border-bottom: 2px solid #343a40;" class="text-center">Status</th>
            <th style="width: 15%; border-right: 2px solid #343a40; border-bottom: 2px solid #343a40;" class="text-center">Club</th>
            <th style="width: 25%; border-right: 2px solid #343a40; border-bottom: 2px solid #343a40;" class="text-center">Address</th>
            <th style="width: 10%; border-right: 2px solid #343a40; border-bottom: 2px solid #343a40;" class="text-center">District</th>
            <th style="width: 20%; border-right: 2px solid #343a40; border-bottom: 2px solid #343a40;" class="text-center">City of province</th>
            <th style="width: 45%; border-bottom: 2px solid #343a40;" class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var court in Model.Courts)
        {
            <tr>
                <td style="border-right: 2px solid #343a40; border-bottom: 1px solid #dee2e6;" class="text-center">@court.Num</td>
                <td style="border-right: 2px solid #343a40; border-bottom: 1px solid #dee2e6;" class="text-center">@court.Status</td>
                <td style="border-right: 2px solid #343a40; border-bottom: 1px solid #dee2e6;" class="text-center">@court.Club.Name</td>
                <td style="border-right: 2px solid #343a40; border-bottom: 1px solid #dee2e6;" class="text-center">@court.Club.Address</td>
                <td style="border-right: 2px solid #343a40; border-bottom: 1px solid #dee2e6;" class="text-center">@court.Club.District</td>
                <td style="border-right: 2px solid #343a40; border-bottom: 1px solid #dee2e6;" class="text-center">@court.Club.CityOfProvince</td>
                <td style="border-bottom: 1px solid #dee2e6; border-left: 2px solid #343a40;" class="text-center ml-2">
                    <div class="btn-group" role="group">
                        <a asp-page="Edit" asp-route-id="@court.Id" class="btn btn-sm btn-warning">Edit</a>
                        <span>|</span>
                        <a asp-page="Details" asp-route-id="@court.Id" class="btn btn-sm btn-info">Details</a>
                        <span>|</span>
                        <a asp-page="Delete" asp-route-id="@court.Id" class="btn btn-sm btn-danger">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>