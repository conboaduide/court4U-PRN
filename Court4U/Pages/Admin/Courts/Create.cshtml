@page
@model Court4U.Pages.Admin.Courts.CreateModel

@{
    ViewData["Title"] = "Create Court";
    Layout = "_AdminLayout";
}
<div style="position: relative;">
    <div class="container mb-30">
        <h1 class="ml-5 text-center" style="font-size: 2.5rem; color: #28a745;">Create Court</h1>
        <div class="row mt-5 ml-5 mb-5">
            <div class="col-md-8 mt-10">
                <form method="post">
                    <div class="form-group mt-5">
                        <label asp-for="CourtRequest.Num" class="control-label mr-10"></label>
                        <input asp-for="CourtRequest.Num" class="form-control form-control-lg rounded border-primary py-1 ml-2" style="border: 1px solid #ced4da; width: 950px; padding: 12px; border-radius: 15px;" />
                        <span asp-validation-for="CourtRequest.Num" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-5">
                        <label asp-for="CourtRequest.Status" class="control-label mr-10"></label>
                        <select asp-for="CourtRequest.Status" asp-items="@Model.StatusOptions" class="form-control form-control-lg rounded border-primary py-1" style="border: 1px solid #ced4da; width: 950px; padding: 12px; border-radius: 15px;">
                            <option value="">Select Status</option>
                        </select>
                        <span asp-validation-for="CourtRequest.Status" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-5">
                        <label class="control-label mr-12" for="CourtRequest_ClubId">Club</label>
                        <select asp-for="CourtRequest.ClubId" asp-items="@Model.ClubOptions" class="form-control form-control-lg rounded border-primary py-1" style="border: 1px solid #ced4da; width: 950px; padding: 12px; border-radius: 15px;">
                            <option value="">Select Club</option>
                        </select>
                        <span asp-validation-for="CourtRequest.ClubId" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-5 text-center">
                        <button type="submit" class="btn btn-primary mr-20" style="background-color: #28a745; font-size: 20px; padding: 10px 25px; border: none; color: white; cursor: pointer; border-radius: 10px;">Create</button>
                        <a asp-page="Index" style="display: inline-block; background-color: #f44336; color: white; font-size: 20px; padding: 10px 20px; text-align: center; text-decoration: none; border-radius: 10px; cursor: pointer;">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
        <div class="mt-3 mb-4 ml-5"></div>
    </div>
</div>