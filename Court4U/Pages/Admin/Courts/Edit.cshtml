@page "{id}"
@model EditModel
@{
    ViewData["Title"] = "Edit Court";
    Layout = "_AdminLayout";
}

<div style="position: relative;">
    <img src="https://t3.ftcdn.net/jpg/01/74/15/42/360_F_174154232_KBkyo0GZHOWMSoRIeLtUvsPv4VwjWwMg.jpg" alt="Background Image" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: -1; opacity: 0.5; margin-bottom: -5px; min-height: 750px;">
    <div class="container mb-30">
        <h1 class="mb-2 ml-20 text-center" style="font-size: 2.5rem; color: lightgreen;">Edit Court</h1>
        <div class="row mt-5 ml-5">
            <div class="col-md-8 mt-10 text-center">
                <form method="post">
                    <div class="form-group mt-5">
                        <label asp-for="CourtRequest.Num" class="control-label mr-10"></label>
                        <input asp-for="CourtRequest.Num" class="form-control form-control-lg rounded border-primary py-1 ml-1" style="width: 400px;" />
                        <span asp-validation-for="CourtRequest.Num" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-5">
                        <label asp-for="CourtRequest.Status" class="control-label mr-10"></label>
                        <select asp-for="CourtRequest.Status" asp-items="@Model.StatusOptions" class="form-control form-control-lg rounded border-primary py-1" style="width: 400px;">
                            <option value="">Select Status</option>
                        </select>
                        <span asp-validation-for="CourtRequest.Status" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-5">
                        <label class="control-label mr-12" for="CourtRequest_ClubId">Club</label>
                        <select asp-for="CourtRequest.ClubId" asp-items="@Model.ClubOptions" class="form-control form-control-lg rounded border-primary py-1" style="width: 400px;">
                            <option value="">Select Club</option>
                        </select>
                        <span asp-validation-for="CourtRequest.ClubId" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-5 mb-5">
                        <button type="submit" class="btn btn-primary mr-20" style="background-color: #28a745; font-size: 20px; padding: 10px 25px; border: none; color: white; cursor: pointer; border-radius: 10px;">Save</button>
                        <a asp-page="Index" style="display: inline-block; background-color: #f44336; font-size: 20px; color: white; padding: 10px 25px; text-align: center; text-decoration: none; border-radius: 10px; cursor: pointer;">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
