@page
@model DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "_AdminLayout";
}

<h1 class="text-2xl font-bold mb-4">Delete User</h1>

<div>
    <h3>Are you sure you want to delete this user?</h3>
    <hr />

    <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="mb-4">
            <dt class="font-semibold">Username</dt>
            <dd>@Html.DisplayFor(model => model.User.Username)</dd>
        </div>
        <div class="mb-4">
            <dt class="font-semibold">Password</dt>
            <dd>@Html.DisplayFor(model => model.User.Password)</dd>
        </div>
        <div class="mb-4">
            <dt class="font-semibold">Full Name</dt>
            <dd>@Html.DisplayFor(model => model.User.FullName)</dd>
        </div>
        <div class="mb-4">
            <dt class="font-semibold">Email</dt>
            <dd>@Html.DisplayFor(model => model.User.Email)</dd>
        </div>
        <div class="mb-4">
            <dt class="font-semibold">Date of Birth</dt>
            <dd>@Html.DisplayFor(model => model.User.DOB)</dd>
        </div>
        <div class="mb-4">
            <dt class="font-semibold">Phone</dt>
            <dd>@Html.DisplayFor(model => model.User.Phone)</dd>
        </div>
        <div class="mb-4">
            <dt class="font-semibold">Address</dt>
            <dd>@Html.DisplayFor(model => model.User.Address)</dd>
        </div>
        <div class="mb-4">
            <dt class="font-semibold">Gender</dt>
            <dd>@Html.DisplayFor(model => model.User.Gender)</dd>
        </div>
        <div class="mb-4">
            <dt class="font-semibold">Avatar URL</dt>
            <dd>@Html.DisplayFor(model => model.User.AvatarUrl)</dd>
        </div>
        <div class="mb-4">
            <dt class="font-semibold">Token</dt>
            <dd>@Html.DisplayFor(model => model.User.Token)</dd>
        </div>
        <div class="mb-4">
            <dt class="font-semibold">Status</dt>
            <dd>@Html.DisplayFor(model => model.User.Status)</dd>
        </div>
        <div class="mb-4">
            <dt class="font-semibold">Role</dt>
            <dd>@Html.DisplayFor(model => model.User.Role)</dd>
        </div>
        <div class="mb-4">
            <dt class="font-semibold">Created Date</dt>
            <dd>@Html.DisplayFor(model => model.User.CreatedDate)</dd>
        </div>
        <div class="mb-4">
            <dt class="font-semibold">Updated Date</dt>
            <dd>@Html.DisplayFor(model => model.User.UpdatedDate)</dd>
        </div>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="User.Id" />
        <div class="mt-6">
            <input type="submit" value="Delete" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded cursor-pointer" /> |
            <a asp-page="./Index" class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800">
                Back to List
            </a>
        </div>
    </form>
</div>
