@page
@model Court4U.Pages.Admin.Users.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "_AdminLayout";
}

<h1 class="text-center text-2xl font-bold mb-4">Create</h1>

<h4 class="text-center text-xl font-semibold mb-4">User</h4>
<hr />
<div class="flex justify-center">
    <div class="w-full max-w-lg">
        <form method="post" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

            <div class="mb-4">
                <label asp-for="User.Username" class="block text-gray-700"></label>
                <input asp-for="User.Username" class="form-input mt-1 block w-full" />
                <span asp-validation-for="User.Username" class="text-red-500"></span>
            </div>

            <div class="mb-4">
                <label asp-for="User.Password" class="block text-gray-700"></label>
                <input asp-for="User.Password" class="form-input mt-1 block w-full" />
                <span asp-validation-for="User.Password" class="text-red-500"></span>
            </div>

            <div class="mb-4">
                <label asp-for="User.FullName" class="block text-gray-700"></label>
                <input asp-for="User.FullName" class="form-input mt-1 block w-full" />
                <span asp-validation-for="User.FullName" class="text-red-500"></span>
            </div>

            <div class="mb-4">
                <label asp-for="User.Email" class="block text-gray-700"></label>
                <input asp-for="User.Email" class="form-input mt-1 block w-full" />
                <span asp-validation-for="User.Email" class="text-red-500"></span>
            </div>

            <div class="mb-4">
                <label asp-for="User.DOB" class="block text-gray-700"></label>
                <input asp-for="DOB" type="date" format="dd-mm-yyyy" class="form-input mt-1 block w-full" />
                <span asp-validation-for="User.DOB" class="text-red-500"></span>
            </div>

            <div class="mb-4">
                <label asp-for="User.Phone" class="block text-gray-700"></label>
                <input asp-for="User.Phone" class="form-input mt-1 block w-full" />
                <span asp-validation-for="User.Phone" class="text-red-500"></span>
            </div>

            <div class="mb-4">
                <label asp-for="User.Address" class="block text-gray-700"></label>
                <input asp-for="User.Address" class="form-input mt-1 block w-full" />
                <span asp-validation-for="User.Address" class="text-red-500"></span>
            </div>

            <div class="mb-4">
                <label asp-for="User.Gender" class="block text-gray-700"></label>
                <select asp-for="User.Gender" class="form-select mt-1 block w-full">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <span asp-validation-for="User.Gender" class="text-red-500"></span>
            </div>

            <div class="mb-4">
                <label asp-for="User.AvatarUrl" class="block text-gray-700"></label>
                <input asp-for="User.AvatarUrl" class="form-input mt-1 block w-full" />
                <span asp-validation-for="User.AvatarUrl" class="text-red-500"></span>
            </div>

            <div class="mb-4">
                <label asp-for="User.Status" class="block text-gray-700"></label>
                <select asp-for="User.Status" class="form-select mt-1 block w-full">
                    @foreach (var status in Model.Statuses)
                    {
                        <option value="@status.Value">@status.Text</option>
                    }
                </select>
                <span asp-validation-for="User.Status" class="text-red-500"></span>
            </div>

            <div class="mb-4">
                <label asp-for="User.Role" class="block text-gray-700"></label>
                <select asp-for="User.Role" class="form-select mt-1 block w-full">
                    @foreach (var role in Model.Roles)
                    {
                        <option value="@role.Value">@role.Text</option>
                    }
                </select>
                <span asp-validation-for="User.Role" class="text-red-500"></span>
            </div>

            <div class="flex items-center justify-between">
                <input type="submit" value="Create" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-pointer" />
                <a asp-page="./Index" class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>