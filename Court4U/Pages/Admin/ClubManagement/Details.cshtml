@page
@model Court4U.Pages.Admin.ClubManagement.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "_Layout";
}

<h1>Details</h1>

<div>
    <h4>Club</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Club.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Club.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Club.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Club.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Club.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Club.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Club.CityOfProvince)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Club.CityOfProvince)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Club.District)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Club.District)
        </dd>
        <dt class="col-sm-2">
            Logo
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Club.LogoUrl))
            {
                <img src="@Model.Club.LogoUrl" alt="Club Logo" style="max-width: 100px; max-height: 100px;" />
            }
            else
            {
                <span>No logo available</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Club.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
