@page "/clubs"
@model Court4U.Pages.Admin.ClubManagement.IndexModel
@{
    ViewData["Title"] = "Clubs";
    Layout = "_Layout";
}

<h1>Clubs</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Address</th>
            <th>City</th>
            <th>District</th>
            <th>Actions</th>
            <th>Logo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var club in Model.Clubs)
        {
            <tr>
                <td>@club.Name</td>
                <td>@club.Description</td>
                <td>@club.Address</td>
                <td>@club.CityOfProvince</td>
                <td>@club.District</td>
                <td>
                    @if (!string.IsNullOrEmpty(club.LogoUrl))
                    {
                        <img src="@club.LogoUrl" alt="Club Logo" style="max-width: 100px; max-height: 100px;" />
                    }
                    else
                    {
                        <span>No logo available</span>
                    }
                </td>
                <td>
                    <a asp-page="Edit" asp-route-id="@club.Id">Edit</a> |
                    <a asp-page="Details" asp-route-id="@club.Id">Details</a> |
                    <a asp-page="Delete" asp-route-id="@club.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
