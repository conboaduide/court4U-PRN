@page "{id}"
@model Court4U.Pages.Admin.ClubManagement.DeleteModel
@{
    ViewData["Title"] = "Delete Club";
    Layout = "_Layout";
}

<h1>Delete Club</h1>

<h4>Club</h4>
<hr />
<div>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>@Model.Club.Name</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@Model.Club.Description</dd>
            <dt class="col-sm-2">Address</dt>
            <dd class="col-sm-10">@Model.Club.Address</dd>
            <dt class="col-sm-2">City</dt>
            <dd class="col-sm-10">@Model.Club.CityOfProvince</dd>
        </dl>

        <form method="post">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-page="Index">Back to List</a>
        </form>
    </div>
</div>
