@page
@model DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "_AdminLayout";
}

<div style="position: relative;">
    <img src="https://img.freepik.com/premium-photo/lovely-sport-composition-with-badminton-elements_23-2147913668.jpg" alt="Background Image" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: -1; opacity: 0.5; margin-bottom: -5px; min-height: 750px;">
    <h1>Details</h1>
    <div class="container mt-5 mb-30 text-center mx-auto">
        <h1 class="mt-20" style="font-size: 2.5rem; color: #007bff;">Club Details</h1>
        <div class="row mt-5">
            <div class="col-md-8 mx-auto">
                <div class="mt-4 text-center">
                    <div class="bg-primary text-light p-2">
                        <h4 style="color: #28a745; font-size: larger; font-weight: bold;">@Model.Club.Name</h4>
                    </div>
                    <div class="text-left mt-2 mx-auto" style="max-width: 300px;">
                        <p class="my-2">Description: @Model.Club.Description</p>
                        <p class="my-2">Address: @Model.Club.Address</p>
                        <p class="my-2">District: @Model.Club.District</p>
                        <p class="my-2">City of province: @Model.Club.CityOfProvince</p>
                        @if (!string.IsNullOrEmpty(Model.Club.LogoUrl))
                        {
                            <p class="text-left my-2">Logo:</p>
                            <img src="@Model.Club.LogoUrl" alt="Club Logo" class="mx-auto d-block my-2" style="max-width: 200px; height: auto;" />
                        }
                    </div>
                </div>
                <div class="mt-5 mb-10">
                    <a asp-page="./Edit" asp-route-id="@Model.Club.Id" class="btn btn-primary" style="font-size: 20px; padding: 10px 25px; border: none; color: #fff; background-color: #007bff; cursor: pointer; border-radius: 10px;">Edit</a>
                    <a asp-page="./Index" class="btn btn-secondary ml-3" style="font-size: 20px; padding: 10px 25px; border: none; color: #fff; background-color: #28a745; cursor: pointer; border-radius: 10px;">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>