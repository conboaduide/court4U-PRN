            </div>
            <div class="form-group">
                <label asp-for="Court.Id" class="control-label"></label>
                <input asp-for="Court.Id" class="form-control" />
                <span asp-validation-for="Court.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Court.CreatedDate" class="control-label"></label>
                <input asp-for="Court.CreatedDate" class="form-control" />
                <span asp-validation-for="Court.CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Court.UpdatedDate" class="control-label"></label>
                <input asp-for="Court.UpdatedDate" class="form-control" />
                <span asp-validation-for="Court.UpdatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
