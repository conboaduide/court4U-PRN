@page
@model Court4U.Pages.Owner.Clubs.Courts.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "_OwnerLayout";
}

<h1 class="text-3xl font-bold mb-6">Delete Court</h1>

<h3 class="text-xl mb-4">Are you sure you want to delete this?</h3>
<div class="bg-white shadow-md rounded-lg p-6">
    <h4 class="text-lg font-semibold mb-4">Court Details</h4>
    <hr class="mb-6" />
    <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <dt class="font-medium text-gray-700">
            @Html.DisplayNameFor(model => model.Court.Num)
        </dt>
        <dd class="text-gray-900">
            @Html.DisplayFor(model => model.Court.Num)
        </dd>
        <dt class="font-medium text-gray-700">
            @Html.DisplayNameFor(model => model.Court.Status)
        </dt>
        <dd class="text-gray-900">
            @Html.DisplayFor(model => model.Court.Status)
        </dd>
        <dt class="font-medium text-gray-700">
            @Html.DisplayNameFor(model => model.Court.Club)
        </dt>
        <dd class="text-gray-900">
            @Html.DisplayFor(model => model.Court.Club.Id)
        </dd>
        <dt class="font-medium text-gray-700">
            @Html.DisplayNameFor(model => model.Court.CreatedDate)
        </dt>
        <dd class="text-gray-900">
            @Html.DisplayFor(model => model.Court.CreatedDate)
        </dd>
        <dt class="font-medium text-gray-700">
            @Html.DisplayNameFor(model => model.Court.UpdatedDate)
        </dt>
        <dd class="text-gray-900">
            @Html.DisplayFor(model => model.Court.UpdatedDate)
        </dd>
    </dl>

    <form method="post" class="mt-6">
        <input type="hidden" asp-for="Court.Id" />
        <div class="flex space-x-4">
            <input type="submit" value="Delete" class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700" />
            <a asp-page="./Index" class="text-blue-600 hover:underline">Back to List</a>
        </div>
    </form>
</div>
