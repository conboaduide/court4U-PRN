@page
@model Court4U.Pages.Owner.Clubs.Courts.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "_OwnerLayout";
    var clubId = HttpContext.Session.GetString("ClubId");
}

<h1>Edit</h1>

<h4>Court</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Court.Num" class="control-label"></label>
                <input asp-for="Court.Num" class="form-control" />
                <span asp-validation-for="Court.Num" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Court.Status" class="control-label"></label>
                <select asp-for="Court.Status" class="form-control"></select>
                <span asp-validation-for="Court.Status" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Court.ClubId" class="form-control" asp-items="@clubId"></input>
            <input type="hidden" asp-for="Court.Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
