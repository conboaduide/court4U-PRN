@page
@model Court4U.Pages.Owner.Clubs.IndexModel
@{
    Layout = "_OwnerSelectClubLayout";
}
<a asp-page="Create" class="mb-4 focus:outline-none text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800">Create new club</a>
<h1 class="font-bold text-2xl mt-8 text-center mb-8">SELECT YOUR CLUB FOR NEXT ACTION</h1>
@if (Model.Clubs != null)
{
    <div class="flex flex-wrap justify-center gap-4">
        @foreach (var item in Model.Clubs)
        {
            <form class="flex flex-col flex-wrap items-center w-1/5 p-4" method="post">
                <div class="w-[15vw] bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
                    <img class="rounded-t-lg w-full h-48 object-cover" src="@item.LogoUrl" alt="Club logo" />
                    <div class="p-5 min-h-[30vh]">
                        <a href="#">
                            <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">@item.Name</h5>
                        </a>
                        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">@item.Description</p>
                    </div>
                    <div class="p-5" >
                        <button type="submit" class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-green-700 rounded-lg hover:bg-green-800 focus:ring-4 focus:outline-none focus:ring-green-300 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800">
                            Login with this club
                            <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9" />
                            </svg>
                        </button>
                    </div>
                    <input type="hidden" name="clubId" value="@item.Id" />
                </div>
            </form>
        }
    </div>
}
else
{
    <div class="relative w-full h-full">
        <div class="absolute top-[40%] left-[40%] font-bold">
            <div>No club is available</div>
            <a asp-page="Create" class="text-decoration-underline">Create new club ? </a>
        </div>
    </div>
}

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/club.js"></script>