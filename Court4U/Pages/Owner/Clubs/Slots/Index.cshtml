@page
@model Court4U.Pages.Owner.Clubs.Slots.IndexModel
@{
    Layout = "_OwnerLayout";
}

<div class="p-4">
    <h1 class="text-2xl font-bold mb-4">Manage Slots</h1>
    <div class="overflow-x-auto">
        <table class="min-w-full bg-white border border-gray-200">
            <thead>
                <tr>
                    <th class="py-2 px-4 border-b">Time</th>
                    @foreach (var day in Enum.GetValues(typeof(DayOfWeek)))
                    {
                        <th class="py-2 px-4 border-b">@day</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var timeSlot in Model.TimeSlots)
                {
                    <tr>
                        <td class="py-2 px-4 border-b">@timeSlot.Time</td>
                        @for (int day = 0; day < 7; day++)
                        {
                            <td class="py-2 px-4 border-b">
                                @if (timeSlot.Slots.ContainsKey(day))
                                {
                                    <div class="flex items-center justify-between">
                                        @timeSlot.Slots[day].Display
                                        <button onclick="deleteSlot('@timeSlot.Slots[day].SlotId')" class="text-red-500 ml-2 w-1">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </div>
                                }
                            </td>
                        }
                    </tr>
                }
                <tr>
                    <td class="py-2 px-4 border-b">Add Slot</td>
                    @for (int day = 0; day < 7; day++)
                    {
                        <td class="py-2 px-4 border-b text-center">
                            <button onclick="showAddSlotModal(@day)" class="text-blue-500">
                                <i class="font-bold">+</i>
                            </button>
                        </td>
                    }
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Modal for Adding Slot -->
    <div id="addSlotModal" class="fixed inset-0 flex items-center justify-center bg-gray-500 bg-opacity-75 hidden">
        <div class="bg-white p-6 rounded-lg">
            <h2 class="text-xl font-bold mb-4">Add Slot</h2>
            <div class="mb-4">
                <label class="block mb-2">Start Time</label>
                <input type="time" id="startTime" class="border border-gray-300 p-2 w-full bg-white" />
            </div>
            <div class="mb-4">
                <label class="block mb-2">End Time</label>
                <input type="time" id="endTime" class="border border-gray-300 p-2 w-full bg-white" />
            </div>
            <div class="mb-4">
                <label class="block mb-2">Price</label>
                <input type="number" id="price" class="border border-gray-300 p-2 w-full bg-white" />
            </div>
            <div class="mb-4">
                <input type="hidden" id="dateOfWeek" />
            </div>
            <div class="flex justify-end">
                <button onclick="addSlot()" class="bg-blue-500 text-white px-4 py-2 rounded mr-2">Add</button>
                <button onclick="hideAddSlotModal()" class="bg-gray-300 text-black px-4 py-2 rounded">Cancel</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showAddSlotModal(day) {
            document.getElementById('dateOfWeek').value = day;
            document.getElementById('addSlotModal').classList.remove('hidden');
        }

        function hideAddSlotModal() {
            document.getElementById('addSlotModal').classList.add('hidden');
        }

        async function addSlot() {
            const startTime = document.getElementById('startTime').value;
            const endTime = document.getElementById('endTime').value;
            const price = document.getElementById('price').value;
            const dateOfWeek = document.getElementById('dateOfWeek').value;

            const response = await fetch('/api/slot/add', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ startTime, endTime, price, dateOfWeek })
            });

            if (response.ok) {
                location.reload();
            } else {
                alert('Failed to add slot.');
            }
        }

        async function deleteSlot(slotId) {
            const response = await fetch(`/api/slot/delete/${slotId}`, {
                method: 'DELETE'
            });

            if (response.ok) {
                location.reload();
            } else {
                alert('Failed to delete slot.');
            }
        }
    </script>
}

