</p>

<table class="mt-8 w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400 bg-gray-200">
    <thead>
        <tr>
            <th scope="col" class="px-6 py-3 text-black">
                Id
            </th>
            <th scope="col" class="px-6 py-3 text-black">
                Member Id
            </th>
            <th class="px-6 py-3 text-black">
                Start Date
            </th>
            <th scope="col" class="px-6 py-3 text-black">
                End Date
            </th>
            <th scope="col" class="px-6 py-3 text-black">
                SubscriptionOptionId
            </th>
            @* <th scope="col" class="px-6 py-3 text-black">Action</th> *@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.MemberSubscriptions)
        {
            <tr class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700">
                <td scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td class="px-6 py-4 text-white">
                    @Html.DisplayFor(modelItem => item.MemberId)
                </td>
                <td class="px-6 py-4 text-white">
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td class="px-6 py-4 text-white">
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td class="px-6 py-4 text-white">
                    @Html.DisplayFor(modelItem => item.SubscriptionOptionId)
                </td>
                @* <td class="py-2 px-4 ">
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="bg-green-500 hover:bg-green-700 text-white font-bold py-1 px-2 rounded">Edit</a>
                    @if (item.Status == DataAccess.Entity.Enums.SubscriptionOptionStatus.Active)
                    {
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="bg-red-500 hover:bg-red-700 text-white font-bold py-1 px-2 rounded">Delete</a>
                    }
                    else
                    {
                        <a asp-page="./Active" asp-route-id="@item.Id" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-2 rounded">Active</a>
                    }
                </td> *@
            </tr>
        }
    </tbody>
</table>