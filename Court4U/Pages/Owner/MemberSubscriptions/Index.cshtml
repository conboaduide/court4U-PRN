@page
@model Court4U.Pages.Owner.MemberSubscriptions.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "_OwnerLayout";

}
<p>
    <a type="button" class="mb-2 focus:outline-none text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800" asp-page="Create">Create New</a>
</p>

    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400 bg-gray-200">
        <thead>
            <tr>
                <th scope="col" class="px-6 py-3 text-black">
                    Name
                </th>
                <th scope="col" class="px-6 py-3 text-black">
                    Price
                </th>
                <th class="px-6 py-3 text-black" ">
                    Total Date
                </th>
                <th scope="col" class="px-6 py-3 text-black">
                    Status
                </th>
                <th scope="col" class="px-6 py-3 text-black">
                    Create Date
                </th>
                <th scope="col" class="px-6 py-3 text-black">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.SubscriptionOption)
            {
                <tr class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700">
                    <td scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="px-6 py-4 text-white">
                        @Html.DisplayFor(modelItem => item.price)
                    </td>
                    <td class="px-6 py-4 text-white">
                        @Html.DisplayFor(modelItem => item.TotalDate)
                    </td>
                    <td class="px-6 py-4 text-white">
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td class="px-6 py-4 text-white">
                        @Html.DisplayFor(modelItem => item.CreatedDate)
                    </td>
                    <td class="py-2 px-4 border-b">
                        <a asp-page="/Edit" asp-route-id="@item.Id" class="bg-green-500 hover:bg-green-700 text-white font-bold py-1 px-2 rounded">Edit</a>
                        <a asp-page="./Details" asp-route-id="@item.Id" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-2 rounded">Details</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="bg-red-500 hover:bg-red-700 text-white font-bold py-1 px-2 rounded">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

