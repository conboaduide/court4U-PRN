    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Slot</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Slot.StartTime" class="control-label"></label>
                <input asp-for="Slot.StartTime" class="form-control" />
                <span asp-validation-for="Slot.StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Slot.EndTime" class="control-label"></label>
                <input asp-for="Slot.EndTime" class="form-control" />
                <span asp-validation-for="Slot.EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Slot.DateOfWeek" class="control-label"></label>
                <input asp-for="Slot.DateOfWeek" class="form-control" />
                <span asp-validation-for="Slot.DateOfWeek" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Slot.Price" class="control-label"></label>
                <input asp-for="Slot.Price" class="form-control" />
                <span asp-validation-for="Slot.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Slot.ClubId" class="control-label"></label>
