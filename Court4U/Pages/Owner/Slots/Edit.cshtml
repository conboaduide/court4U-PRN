                <span asp-validation-for="Slot.ClubId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Slot.Id" />
            <div class="form-group">
                <label asp-for="Slot.CreatedDate" class="control-label"></label>
                <input asp-for="Slot.CreatedDate" class="form-control" />
                <span asp-validation-for="Slot.CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Slot.UpdatedDate" class="control-label"></label>
                <input asp-for="Slot.UpdatedDate" class="form-control" />
                <span asp-validation-for="Slot.UpdatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

