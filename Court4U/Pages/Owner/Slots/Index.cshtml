@page
@model Court4U.Pages.Owner.Slots.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Slot[0].StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slot[0].EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slot[0].DateOfWeek)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slot[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slot[0].Club)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slot[0].CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slot[0].UpdatedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Slot) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfWeek)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Club.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
