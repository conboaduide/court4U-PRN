@page
@model Court4U.Pages.ViewBookedSlotModel
@{
    Layout = "_UserLayout";
}
@* <h2>Booked Slots</h2>
<div class="text-left mt-20 ml-5">
    <a href="/Clubs" class="btn btn-success rounded" style="background-color: #28a745; border-color: #28a745; padding: 10px 20px; font-size: 1.25rem;">Back to Clubs</a>
</div>
<div class="d-flex justify-content-center align-items-center mb-5 mt-5">
    <table class="table table-striped table-bordered mt-5 text-center" style="width: 100%;">
        <thead class="thead-dark">
            <tr>
                <th style="width: 25%; border-right: 1px; border-bottom: 1px solid #dee2e6;" class="text-center">Club Name</th>
                <th style="width: 15%; border-right: 1px; border-bottom: 1px solid #dee2e6;" class="text-center">Start Time</th>
                <th style="width: 15%; border-right: 1px; border-bottom: 1px solid #dee2e6;" class="text-center">End Time</th>
                <th style="width: 15%; border-right: 1px; border-bottom: 1px solid #dee2e6;" class="text-center">Date</th>
                <th style="width: 10%; border-right: 1px; border-bottom: 1px solid #dee2e6;" class="text-center">Checked In</th>
                <th style="width: 20%; border-bottom: 1px solid #dee2e6;" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.BookedSlotList)
            {
                var slot = item.Slot;
                var club = slot?.Club;

                <tr>
                    <td style="border-right: 1px; border-bottom: 1px solid #dee2e6;" class="text-center">@club?.Name</td>
                    <td style="border-right: 1px; border-bottom: 1px solid #dee2e6;" class="text-center">@slot?.StartTime.ToString("HH:mm")</td>
                    <td style="border-right: 1px; border-bottom: 1px solid #dee2e6;" class="text-center">@slot?.EndTime.ToString("HH:mm")</td>
                    <td style="border-right: 1px; border-bottom: 1px solid #dee2e6;" class="text-center">@slot?.DateOfWeek.ToString("dd/MM/yyyy")</td>
                    <td style="border-right: 1px; border-bottom: 1px solid #dee2e6;" class="text-center">@item.CheckedIn</td>
                    <td style="border-bottom: 1px solid #dee2e6; border-left: 1px;" class="text-center">
                        <div class="btn-group" role="group">
                            <a asp-page="/CancelBooking" asp-route-id="@item.Id" class="bg-red-500 text-white py-1 px-2 rounded-lg" style="cursor: pointer;">Cancel Booking</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table> *@
</div>
