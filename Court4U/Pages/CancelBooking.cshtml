@page "{id?}"
@model Court4U.Pages.CancelBookingModel
@{
    Layout = "_UserLayout";
}

<h2 class="mt-20 ml-5 text-center text-red-600 text-4xl">Cancel Booking</h2>

<div class="text-left mt-5 ml-5">
    <a href="/ViewBookedSlot" class="btn btn-success rounded" style="background-color: #28a745; border-color: #28a745; padding: 10px 20px; font-size: 1.25rem;">Back to View Booking</a>
</div>

<div class="col-md-8 mx-auto">
    <div class="mt-4 text-center">
        <form method="post">
            <div class="bg-primary text-light p-2">
                <h4 style="color: #28a745; font-size: larger; font-weight: bold;">Booking Details</h4>
            </div>
            <div class="text-left mt-2 mx-auto" style="max-width: 500px;">
                <div class="form-group my-2">
                    <label for="BookingId">Booking ID:</label>
                    <input type="text" id="BookingId" name="BookingId" asp-for="BookingId" class="form-control" readonly style="width: 100%;" />
                </div>
                <div class="form-group my-2">
                    <label for="ClubName">Club Name:</label>
                    <input type="text" id="ClubName" name="ClubName" asp-for="ClubName" class="form-control" readonly style="width: 100%;" />
                </div>
                <div class="form-group my-2">
                    <label for="StartTime">Start Time:</label>
                    <input type="text" id="StartTime" name="StartTime" asp-for="StartTime" class="form-control" readonly style="width: 100%;" />
                </div>
                <div class="form-group my-2">
                    <label for="EndTime">End Time:</label>
                    <input type="text" id="EndTime" name="EndTime" asp-for="EndTime" class="form-control" readonly style="width: 100%;" />
                </div>
                <div class="form-group my-2">
                    <label for="Date">Date:</label>
                    <input type="text" id="Date" name="Date" asp-for="Date" class="form-control" readonly style="width: 100%;" />
                </div>
                <div class="text-center mt-4">
                    <button type="submit" class="bg-red-500 text-white py-2 px-4 rounded-lg mb-5" style="cursor: pointer;">Cancel Booking</button>
                </div>
            </div>
        </form>
    </div>
</div>

@foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
{
    <div class="alert alert-danger">
        @error.ErrorMessage
    </div>
}
