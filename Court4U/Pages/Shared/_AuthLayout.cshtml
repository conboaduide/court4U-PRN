<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Court4U_PRN</title>
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
</head>
<body class="bg-gray-100">
    <div class="flex flex-col lg:flex-row min-h-screen">
        <div class="lg:w-1/2 min-h-screen bg-[#1b282a] relative">
            <img src="../../assets/authBackground.jpg" alt="Auth Background" class="object-cover w-full h-full" />
        </div>
        <div class="lg:w-1/2 min-h-screen bg-secondary flex flex-col py-16 px-4 text-center">
            @RenderBody()
        </div>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
